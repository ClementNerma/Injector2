{
  "manifest_version": 3,
  "name": "Injector 2",
  "author": "Cl√©ment Nerma",
  "version": "1.0.0",
  "description": "Inject JavaScript files on any website",
  "browser_specific_settings": {
    "gecko": {
      "id": "clement.nerma@gmail.com"
    }
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "service_worker": "dist/app.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}